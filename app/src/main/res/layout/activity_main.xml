                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Пиво Aecht Schlenkerla - Rauchbier Märzen"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/volumeAecht"
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:text="5000 мл, 5.1%"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/priceAecht"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="3 879 руб."
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/buttonAechtMinus"
                            android:layout_width="5dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="#31C517"
                            android:onClick="minusAecht"
                            android:text="-" />

                        <TextView
                            android:id="@+id/textAecht"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/buttonAechtPlus"
                            android:layout_width="5dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:backgroundTint="#31C517"
                            android:onClick="plussAecht"
                            android:text="+" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

